<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".src.main.info.InfoFragment">

        <androidx.viewpager.widget.ViewPager
            android:id="@+id/fragment_info_vp"
            android:layout_width="match_parent"
            android:layout_height="103dp"
            android:layout_marginHorizontal="17dp"
            android:layout_marginTop="22dp"
            android:layout_marginBottom="13dp">

        </androidx.viewpager.widget.ViewPager>

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/home_tab_indicator"
            android:layout_width="wrap_content"
            android:layout_height="8dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginHorizontal="17dp"
            android:layout_marginTop="12dp"
            app:tabBackground="@drawable/tab_selector"
            app:tabGravity="center"
            app:tabIndicatorHeight="0dp"
            app:tabPaddingEnd="7dp"
            app:tabPaddingStart="7dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="17dp"
            android:layout_marginTop="22dp"
            android:lineSpacingExtra="8.7sp"
            android:textColor="#000000"
            android:textSize="20sp"
            android:textStyle="bold"
            android:text="예방 상품 추천" />

        <ImageView
            android:id="@+id/fragment_order_iv_mask"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:layout_marginHorizontal="17dp"
            android:layout_marginTop="13dp"
            android:adjustViewBounds="true"

            android:src="@drawable/img_mask" />

        <ImageView
            android:id="@+id/fragment_order_iv_hand"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginHorizontal="17dp"
            android:layout_marginTop="20dp"
            android:adjustViewBounds="true"
            android:src="@drawable/img_hand" />
    </LinearLayout>
</ScrollView>