<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/list_infected_Linear_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorWhite"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/dialog_infect_select_iv_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="12dp"
            android:src="@drawable/btn_check_box_on" />

        <TextView
            android:id="@+id/dialog_infect_select_tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:text="1번 확진자"
            android:textColor="#151515"
            android:textSize="14sp"
            android:layout_marginEnd="20dp"
             />
        <TextView
            android:id="@+id/dialog_infect_select_tv_cured"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:text="완치자"
            android:textColor="@color/colorPrimary"
            android:layout_marginEnd="20dp"/>
        <TextView
            android:id="@+id/dialog_infect_select_tv_new"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorErrorRed"
            android:text="NEW"/>


    </LinearLayout>
</LinearLayout>