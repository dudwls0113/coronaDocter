<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="12.2dp"
        android:layout_marginStart="12.7dp"
        android:layout_marginEnd="12.7dp"
        android:layout_marginBottom="8.7dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="#010101"
            android:lineSpacingExtra="4.7sp"
            android:text="익명" />
        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/list_comment_tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:textColor="#434343"
            android:lineSpacingExtra="3.7sp"
            tools:text="4분전"/>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="12.7dp"
        android:layout_marginEnd="12.7dp"
        android:id="@+id/list_comment_tv_content"
        android:textSize="12sp"
        android:textColor="#010101"
        android:lineSpacingExtra="3.7sp"
        tools:text="우리 지역에 감염자수 개많아..."
        android:layout_marginBottom="12.7dp"/>
    <View
        android:id="@+id/endLine"
        android:layout_width="match_parent"
        android:layout_height="0.7dp"
        android:background="#707070"
        android:layout_marginStart="12.7dp"
        android:layout_marginEnd="12.7dp"/>




</LinearLayout>